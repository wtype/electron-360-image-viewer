{
  "name": "360viewer",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist-win": "build -w",
    "dist-mac": "build -m"
  },
  "dependencies": {
    "electron": "^15.5.5",
    "electron-builder": "^22.3.2"
  },
  "build": {
    "appId": "360.image.viewer.wt",
    "dmg": {
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "perMachine": true
    }
  }
}
